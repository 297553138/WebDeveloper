.card{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom:30rpx;
  padding-bottom: 5px;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  background-color: #fff;
}
.card-head{
  margin: 20rpx 0 0 20rpx;
}
.card-head image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.card-head text{
  margin-left: 20rpx;
  font-size: 26rpx;
  line-height: 60rpx;
}
.card-title{
  margin-left: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  line-height: 80rpx;
}
.card-body image{
  width:100%;
  height: 440rpx;
}
.card-body text{
  display: block;
  padding: 0 10rpx;
  font-size: 24rpx;
  color: #666;
}
.card-foot{
  line-height: 40rpx;
}
.card-foot image{
  width:24rpx;
  height: 24rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.card-foot text{
  font-size: 24rpx;
  color: #888;
}